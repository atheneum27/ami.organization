    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="members.js"></script>
    <script>
        // JavaScript to handle unit filtering
        document.addEventListener('DOMContentLoaded', () => {
            // Get the unit parameter from the URL
            const urlParams = new URLSearchParams(window.location.search);
            const unit = urlParams.get('unit');

            // Hide all sections by default
            const sections = document.querySelectorAll('.units');
            sections.forEach(section => {
                section.style.display = 'none';
            });

            // Show the section corresponding to the unit parameter
            if (unit) {
                const targetSection = document.getElementById(unit);
                if (targetSection) {
                    targetSection.style.display = 'block';
                    // Scroll to the section
                    targetSection.scrollIntoView({ behavior: 'smooth' });
                } else {
                    // Fallback: Show a default section or message if unit is invalid
                    document.querySelector('.units').style.display = 'block';
                }
            } else {
                // If no unit is specified, show a default section (e.g., Pembina)
                document.getElementById('pembina').style.display = 'block';
            }
        });
    </script>
